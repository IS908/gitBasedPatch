<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <!--引入配置属性文件 -->
    <context:property-placeholder location="classpath*:git.properties"/>
    <context:component-scan base-package="com.dcits.modelbank"/>

    <!-- 增量抽取相关类依赖注入 - start -->
    <bean name="patchFileService" class="com.dcits.modelbank.service.impl.PatchFileServiceImpl">
        <constructor-arg name="patchFileDir" value="${check.list.file.dir}"/>
        <constructor-arg name="patchFilePrefix">
            <list>
                <value>${check.list.prefix0}</value>
                <value>${check.list.prefix1}</value>
            </list>
        </constructor-arg>
        <property name="basePatchExtractHandler" ref="patchExtractHandler"/>
    </bean>
    <!-- 增量抽取相关类依赖注入 - end -->

    <bean name="gitServices" class="com.dcits.modelbank.service.GitServices">
        <property name="gitServices">
            <list>
                <ref bean="fintelligenService"/>
            </list>
        </property>
    </bean>


    <!-- ModelBank start -->
    <!-- 操作的本地Git项目配置库信息加载 -->
    <bean name="Fintelligen" class="com.dcits.modelbank.jgit.helper.GitHelper">
        <property name="rootDir" value="${git.dir}"/>
        <property name="sourceDir" value="${source.dir}"/>
    </bean>
    <!-- 生成xml文件bean配置信息 -start-->
    <bean id="fintelligenXmlBulider" class="com.dcits.modelbank.utils.XmlBulider">
        <constructor-arg name="xmlFilePath" value="${check.list.file.dir}"/>
        <constructor-arg name="authorAttr">
            <list>
                <value>name</value>
                <value>versionID</value>
                <value>timestamp</value>
                <value>desc</value>
                <value>changeType</value>
                <value>check</value>
            </list>
        </constructor-arg>
        <property name="fileFrefix" value="${check.list.prefix1}"/>
    </bean>
    <!-- FilePathHandler抽象类暴露相应接口，通过继承抽象类实现个性化方法 -->
    <bean name="FintelligenFilePathHandler" class="com.dcits.modelbank.jgit.DefaultBaseFilePathHandler">
        <property name="xmlBulider" ref="fintelligenXmlBulider"/>
    </bean>
    <!-- ModelBank模块GitHandler依赖设置 -->
    <bean name="fintelligenHandler" class="com.dcits.modelbank.jgit.GitHandlerImpl">
        <constructor-arg name="gitHelper" ref="Fintelligen"/>
        <property name="baseFilePathHandler" ref="FintelligenFilePathHandler"/>
    </bean>

    <!-- modelbank模块service注入 -->
    <bean name="fintelligenService" class="com.dcits.modelbank.service.impl.GitServiceImpl">
        <constructor-arg name="gitHandler" ref="fintelligenHandler"/>
        <constructor-arg name="xmlBulider" ref="fintelligenXmlBulider"/>
    </bean>
    <!-- ModelBank end -->

</beans>